<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/logoAzul0</item>
        <item name="colorOnPrimary">@color/logoAzul1</item>
        <item name="colorPrimaryDark">@color/logoAzul3</item>
        <item name="colorAccent">@color/logoAzul2</item>
        
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#686868</item>
    </style>

    <style name="HorizontalDividerTransparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
    </style>

    <style name="VerticalDividerTransparent">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RatingBar" parent="@style/Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlActivated">@color/oroValoracion</item>
        <item name="colorControlNormal">@color/vacioValoracion</item>
    </style>

    <style name="RatingBarLong" parent="@style/Base.Widget.AppCompat.RatingBar">
        <item name="colorControlActivated">@color/oroValoracion</item>
        <item name="colorControlNormal">@color/vacioValoracion</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>
</resources>