<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondoOscuro"
    tools:context=".ui.filtros.FiltrosRestauranteActivity">

    <include
        android:id="@+id/layoutFiltroRestaurantes"
        layout="@layout/fragment_inicio"
        android:layout_width="match_parent"
        android:layout_height="680dp" />

    <Button
        android:id="@+id/botonQuitarFiltros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:background="@drawable/boton"
        android:drawablePadding="10dp"
        android:includeFontPadding="false"
        android:text="Quitar Filtros"
        android:textColor="#000000"
        android:textSize="18sp" />

</LinearLayout>