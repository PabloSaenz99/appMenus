<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.filtros.FiltrosFragment">

    <SearchView
        android:id="@+id/busquedaFiltros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Busca aquÃ­ "></SearchView>

    <!--Aqui se incluye de forma estatica el xml de prueba_layout-->
    <include
        android:id="@+id/prueba_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/prueba_layout"/>

    <!--Esto incluye de forma dinamica nuevo contenido xml
    (especificado en el codigo de filtrosFragment (para asignarlo
    y en FiltrosRecyclerAdapter (para implementar como carga la info))-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFiltrosComida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFEB3B"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>

    <include
        android:id="@+id/prueba_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/prueba_layout"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFiltrosTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00E91E63">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>